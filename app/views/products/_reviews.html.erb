<% @product.reviews.each do |review| %>
  <div class="review">
    <p>
      <%= review.comment %>
      <br>
      <div class="poster">
        <% if review.user != nil %>
          <em> by <%= review.user.name %></em>
          Added on: <%= review.created_at %>
        <% end %>
      </div>
    </p>
  </div>
<% end %>
